cluster = {
  "lvs1" => { :cpus => 2, :mem => 256, :ip => "192.168.55.31" },
  "lvs2" => { :cpus => 2, :mem => 256, :ip => "192.168.55.32" },
  "rs1"  => { :cpus => 2, :mem => 512, :ip => "192.168.55.33" },
}

Vagrant.configure("2") do |config|
  cluster.each_with_index do |(hostname, info), i|

    config.vm.box_check_update = false
    config.vm.synced_folder ".", "/vagrant", type: "rsync",
      rsync__exclude: ".vagrant"
    config.vm.define hostname do |node|
      # base box
      node.vm.box = "generic/centos7"

      # hostname
      node.vm.hostname = hostname

      # provider
      node.vm.provider "parallels" do |p|
        p.check_guest_tools = true
        p.cpus = info[:cpus]
        p.memory = info[:mem]
      end
      # network
      node.vm.network "private_network", ip: info[:ip]

      # provision
      node.vm.provision "shell",
        :inline => "sudo /bin/bash /vagrant/bootstrap.sh"
    end
  end
end
